<script>
var vmusage = new NchanSubscriber('/sub/vm_usage',{subscriber:'websocket'});
vmusage.on('message', function(msg){
  var data = JSON.parse(msg);
  $('#vmstatsbody').html(data);
  });

$(function(){
  // ping subscriber to check for listeners
  var vmPing = new NchanSubscriber('/sub/vmPing',{subscriber:'websocket', reconnectTimeout:5000});
  vmPing.on('message', function(msg){});
  vmPing.start();
  
  vmusage.start();
});

</script>